{
  "name": "@eva-da/ia-design-system",
  "version": "1.0.0",
  "description": "Information Assistant Design System - Reusable UI components and design tokens",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],  "scripts": {
    "build": "tsc && npm run copy-styles",
    "copy-styles": "cp -r src/styles dist/",
    "dev": "tsc --watch",
    "clean": "rm -rf dist",
    "pack-for-eva": "npm run build && npm pack",
    "prepare": "npm run build"
  },
  "keywords": [
    "design-system",
    "ui-components",
    "information-assistant",
    "react",
    "typescript"
  ],
  "author": "EVA-DA Team",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "dependencies": {
    "@fluentui/react": "^8.121.8",
    "@fluentui/react-icons": "^2.0.266",
    "react-bootstrap": "^2.7.4"
  },
  "devDependencies": {
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.0.0"
  }
}
